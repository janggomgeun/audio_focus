{
  "name": "Audio Focus",
  "version": "0.1.0",
  "description": "Enhance focus on audio on a current tab by applying audio blur effects to inactive tabs",
  "icons": {
    "128": "icon_main_128x128.png"
  },
  "author": "Woong Geun Jang",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background":{
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end",
      "js": ["content/content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "128": "icon_main_128x128.png"
    },
    "default_title": "Audio Focus"
  },
  "commands": {
    "toggle-audiofocus": {
      "suggested_key": {
        "default": "Alt+F"
      },
      "description": "Toggle audio focus"
    }
  },
  "minimum_chrome_version": "32.0.0",
  "web_accessible_resources": ["content/page.js"],
  "manifest_version": 2
}
